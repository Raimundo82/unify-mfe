{
  "name": "lit-mfe",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "entry": "index.js",
  "config": {
    "docker": "http://localhost:8080/ldod-mfes",
    "dev": "http://localhost:9000/ldod-mfes"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "pack": "yarn build && ./scripts/pack.sh lit-mfe",
    "publish-dev": "yarn run pack && ./scripts/publish.sh lit-mfe lit-mfe.js @./dist/lit-mfe.tgz $npm_package_config_dev",
    "unpublish-dev": "./scripts/unpublish.sh lit-mfe $npm_package_config_dev",
    "publish": "yarn run pack && ./scripts/publish.sh lit-mfe lit-mfe.js @./dist/lit-mfe.tgz $npm_package_config_docker",
    "unpublish": "./scripts/unpublish.sh lit-mfe $npm_package_config_docker"
  },
  "devDependencies": {
    "@core": "file:../shell/shared/dist",
    "@rollup/plugin-terser": "latest",
    "vite": "latest"
  },
  "dependencies": {
    "@lit-labs/router": "^0.1.1",
    "@lit-labs/ssr": "^3.1.2",
    "@lit-labs/ssr-client": "^1.1.1",
    "lit": "^2.7.4"
  }
}
